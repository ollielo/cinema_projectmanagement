#!/usr/bin/env python

import sys
import h5py

if len(sys.argv) > 1:
    infile = sys.argv[1]
else:
    print("no file input arg ... exiting")
    exit(0)

with h5py.File(infile, "r") as f:
    for a in f.attrs:
        print("{}: {}".format(a, f.attrs[a]))

    print("images:")
    for i in f["image"]:
        print("  image: {}".format(i))

        print("    layers:")
        for l in f["image"][i]["layer"]:
            print("      layer: {}".format(l))
            for a in f["image"][i]["layer"][l].attrs:
                print("        {}: {}".format(a, f["image"][i]["layer"][l].attrs[a]))

            print("        channels:")
            for c in f["image"][i]["layer"][l]["channel"]:
                print("          {}".format(c))
                for a in f["image"][i]["layer"][l]["channel"][c].attrs:
                    print("            {}: {}".format(a, f["image"][i]["layer"][l]["channel"][c].attrs[a]))
